<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :patient_code %>
    <%= f.input :patient_name %>
    <%= f.input :birthdate %>
    <%= f.input :gender, as: :select, collection: ["Male", "Female"], include_blank: false %>
    <%= f.input :date_apointement %>
    <%= f.input :physician_id, as: :select, collection: User.where(user_type: "physician").map{|user| ["#{user.first_name} #{user.last_name}", user.id] } %>
    <%= f.input :is_cancel %>
    <%= f.input :reason_cancel %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
